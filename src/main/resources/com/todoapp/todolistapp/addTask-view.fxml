<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="706.0" prefWidth="965.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.todoapp.todolistapp.AddTaskViewController">
    <children>
        <HBox alignment="CENTER" prefHeight="50.0" prefWidth="560.0">
            <children>
                <Label alignment="CENTER" contentDisplay="CENTER" text="Title">
                    <font>
                        <Font size="30.0" />
                    </font>
                </Label>
            </children>
        </HBox>
        <TextField fx:id="titleTextField" prefHeight="40.0" prefWidth="560.0" VBox.vgrow="ALWAYS" />
        <HBox alignment="CENTER" layoutX="30.0" layoutY="30.0" prefHeight="50.0" prefWidth="560.0">
            <children>
                <Label alignment="CENTER" contentDisplay="CENTER" text="Description">
                    <font>
                        <Font size="24.0" />
                    </font>
                </Label>
            </children>
        </HBox>
        <TextArea fx:id="descriptionTextField" prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS" />
        <HBox alignment="CENTER" prefHeight="58.0" prefWidth="560.0" style="-fx-spacing: 10;">
            <children>
                <Button mnemonicParsing="false" onAction="#saveTask" prefHeight="40.0" prefWidth="80.0" text="Save" />
                <Button alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#exitButton" prefHeight="40.0" prefWidth="80.0" text="Exit" />
            </children>
        </HBox>
    </children>
    <opaqueInsets>
        <Insets />
    </opaqueInsets>
    <padding>
        <Insets left="15.0" right="15.0" />
    </padding>
</VBox>
